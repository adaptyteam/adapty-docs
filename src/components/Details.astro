---
interface Props {
  summary: string;
  defaultOpen?: boolean;
}

const { summary, defaultOpen = false } = Astro.props;
---

<details class="details-component group" open={defaultOpen}>
  <summary class="details-summary">
    <span class="summary-text">{summary}</span>
    <svg class="chevron" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </summary>
  <div class="details-content">
    <div class="details-inner">
      <slot />
    </div>
  </div>
</details>

<style>
  .details-component {
    margin: 1.5rem 0;
    border-radius: 0.75rem;
    border: 1px solid rgba(226, 232, 240, 0.6);
    background: white;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .details-component:hover {
    border-color: rgba(203, 213, 225, 0.8);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .details-summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    cursor: pointer;
    user-select: none;
    list-style: none;
    background: rgba(248, 250, 252, 0.3);
    transition: all 0.2s ease;
  }

  .details-summary::-webkit-details-marker {
    display: none;
  }

  .details-summary:hover {
    background: rgba(248, 250, 252, 0.6);
  }

  .summary-text {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #1e293b;
    letter-spacing: -0.01em;
  }

  .chevron {
    flex-shrink: 0;
    color: #64748b;
    transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .details-component[open] .chevron {
    transform: rotate(180deg);
  }

  .details-content {
    overflow: hidden;
    animation: slideDown 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .details-inner {
    padding: 1.25rem;
    padding-top: 0.5rem;
    color: #475569;
    font-size: 0.9375rem;
    line-height: 1.7;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Typography adjustments for content */
  .details-inner :global(p) {
    margin: 0.75rem 0;
  }

  .details-inner :global(p:first-child) {
    margin-top: 0;
  }

  .details-inner :global(p:last-child) {
    margin-bottom: 0;
  }

  .details-inner :global(ul),
  .details-inner :global(ol) {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
  }

  .details-inner :global(li) {
    margin: 0.5rem 0;
  }

  .details-inner :global(code) {
    font-size: 0.875rem;
    padding: 0.125rem 0.375rem;
    background: rgba(248, 250, 252, 1);
    border: 1px solid rgba(226, 232, 240, 0.6);
    border-radius: 0.375rem;
    color: #6720ff;
    font-weight: 600;
  }

  .details-inner :global(strong) {
    color: #1e293b;
    font-weight: 600;
  }
</style>

