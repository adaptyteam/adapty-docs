---
interface Props {
  value: string;
  label?: string;
  default?: boolean;
}

const { value, label, default: isDefault } = Astro.props;
---

<div 
  class="tab-item hidden" 
  data-value={value} 
  data-label={label} 
  data-default={isDefault ? 'true' : undefined}
  role="tabpanel"
>
  <slot />
</div>
