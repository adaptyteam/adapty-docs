<style>
  /* Base styles for light mode */
  .footer {
    background: linear-gradient(to bottom, #f8fafc 0%, #f1f5f9 50%, #e2e8f0 100%);
    color: var(--text-secondary);
    margin-top: 80px;
    border-top: 1px solid var(--border-primary);
    transition: background 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  /* Dark mode overrides */
  :root.dark .footer,
  html.dark .footer,
  .dark .footer {
    background: linear-gradient(to bottom, #1e293b 0%, #1a202c 50%, #111827 100%) !important;
    color: var(--text-secondary-dark) !important;
    border-top: 1px solid var(--border-primary-dark) !important;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 48px 24px 32px;
  }

  /* Header Section */
  .footer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 32px;
    margin-bottom: 40px;
    border-bottom: 1px solid var(--border-primary);
    flex-wrap: wrap;
    gap: 24px;
  }

  .footer-logo {
    color: var(--text-primary);
    text-decoration: none;
    transition: opacity 0.2s;
    display: flex;
    align-items: center;
  }

  .footer-logo:hover {
    opacity: 0.7;
  }
  
  .footer-logo-img {
    height: 24px;
    width: auto;
    transition: filter 0.3s;
  }
  
  /* Invert logo in dark mode */
  :root.dark .footer-logo-img,
  html.dark .footer-logo-img,
  .dark .footer-logo-img {
    filter: brightness(0) invert(1);
  }

  .footer-social {
    display: flex;
    gap: 12px;
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--text-secondary);
    background: var(--bg-primary);
    border-radius: 8px;
    transition: all 0.2s;
    text-decoration: none;
    border: 1px solid var(--border-primary);
  }

  .footer-social-link:hover {
    color: var(--accent-primary);
    background: var(--bg-hover);
    border-color: var(--border-secondary);
  }

  /* Links Section */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px 32px;
    margin-bottom: 40px;
  }
  
  @media (max-width: 1024px) {
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .footer-column-title {
    font-size: 13px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 16px 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-column-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-column-list a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 15px;
    line-height: 24px;
    transition: color 0.2s;
    display: inline-block;
  }

  .footer-column-list a:hover {
    color: var(--accent-primary);
  }

  /* Bottom Section */
  .footer-bottom {
    padding-top: 24px;
    border-top: 1px solid var(--border-primary);
    text-align: center;
  }

  .footer-copyright {
    margin: 0;
    font-size: 14px;
    color: var(--text-tertiary);
    line-height: 24px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-container {
      padding: 32px 16px 24px;
    }

    .footer-header {
      padding-bottom: 24px;
      margin-bottom: 32px;
    }

    .footer-bottom {
      padding-top: 20px;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .footer-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

