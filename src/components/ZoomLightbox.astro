<div id="zoom-lightbox" class="fixed inset-0 z-[9999] bg-white/60 backdrop-blur-xl opacity-0 invisible transition-all duration-300 flex items-center justify-center cursor-zoom-out">
  <button class="absolute top-6 right-6 z-20 p-2 text-slate-500 hover:text-slate-900 transition-colors bg-white/50 hover:bg-white rounded-full shadow-sm" aria-label="Close zoom">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
  </button>
  <div class="relative w-[90vw] h-[90dvh] flex items-center justify-center pointer-events-none">
    <img class="max-w-full max-h-full w-full h-full object-contain drop-shadow-2xl scale-95 transition-transform duration-300 pointer-events-auto select-none cursor-zoom-out" src="" alt="" />
  </div>
</div>

<script>
  import { initZoom } from '../scripts/zoom';
  
  // Initialize on load and after Astro swaps
  initZoom();
  document.addEventListener('astro:page-load', initZoom);
</script>
